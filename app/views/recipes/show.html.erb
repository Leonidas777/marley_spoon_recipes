<div class="recipe-container">
  <div class="recipe-container__row">
    <div class="recipe-container__row-name">Title</div>
    <div><%= @recipe.title %></div>
  </div>
  <br>

  <div class="recipe-container__row">
    <div class="recipe-container__row-name">Image</div>
    <%= image_tag(@recipe.photo.url) %>
  </div>
  <br>

  <div class="recipe-container__row">
    <div class="recipe-container__row-name">List of Tags</div>
    <div><%= @recipe.tags %></div>
  </div>
  <br>

  <div class="recipe-container__row">
    <div class="recipe-container__row-name">Description</div>
    <div><%= @recipe.description %></div>
  </div>
</div>
